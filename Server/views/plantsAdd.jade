extends layout

block content
    h1= "Ajouter une plante"

    form(method="post", action="/plants/upload")

        div(class="form-group")
            label(for="nameInput") Nom de la plante
            input(class="form-control", type="text", id="nameInput", name="nameInput", placeholder="Name")

        div(class="form-group")
            label(for="descriptionInput") Description de la plante
            textarea(class="form-control", rows="5", id="descriptionInput", name="descriptionInput", placeholder="Description")

        div(class="form-group")
            label(for="coordinateXInput") Coordonnée en X de la plante
            input(class="form-control", type="text", id="coordinateXInput", name="coordinateXInput", placeholder="0.00")

        div(class="form-group")
            label(for="coordinateYInput") Coordonnée en Y de la plante
            input(class="form-control", type="text", id="coordinateYInput", name="coordinateYInput", placeholder="0.00")

        div(class="form-group")
            label(for="pillarIdInput") Selectionner l'id du pillier associé à la plante
            select(class="form-control", id="pillarIdInput", name="pillarIdInput")
                each pillarId in pillars
                    if (pillarId == 0)
                        option(value=pillarId) Aucun
                    if (pillarId > 0)
                        option(value=pillarId) #{pillarId}

        input(type="submit", value="Upload", class="btn btn-default")